@model MbmStore.Models.Book
@using MbmStore.Models

<div class="row mt-5">
	<div class="col-md-2">
		<img src="~/Images/@Model.ImageUrl" alt="@Model.Title" style="width:100px" />
	</div>
	<div class="col-md-4">
		<strong>Title:</strong> @Model.Title<br />
		<strong>Author:</strong> @Model.Author<br />
		<strong>Price:</strong> @Model.Price kr.<br />
		<strong>Publisher:</strong> @Model.Publisher (@Model.Published)<br />
		<strong>ISBN:</strong> @Model.Isbn<br />
	</div>
	@await Html.PartialAsync("_AddToCartButton", (Product) Model)
</div>
