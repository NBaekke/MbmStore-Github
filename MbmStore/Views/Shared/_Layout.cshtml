@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" asp-href-include="/lib/bootstrap/**/*.min.css" />
	<link rel="stylesheet" asp-href-include="/lib/font-awesome/css/*.css" />
	<title>@ViewData["Title"]</title>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<a class="navbar-brand" href="#">MusicBookMovie Store</a>
		<div class="col-4 text-right">
			@await Component.InvokeAsync("CartSummary")
		</div>
	</nav>
	<div class="row m-1 p-1">
		<div id="categories" class="col-3">
			@await Component.InvokeAsync("NavigationMenu", "Nav")
		</div>
		<div class="col-9">
			@RenderBody()
		</div>
	</div>
</body>
</html>
